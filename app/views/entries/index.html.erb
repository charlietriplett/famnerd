<h1 class="page-header">Entries by <%= current_user.username %></h1>

<div id="entries_chart" style="width:100%; height:400px;"></div>

<script type="text/javascript" charset="utf-8">
$(function () { 
    $('#entries_chart').highcharts({
      chart: {
        plotBackgroundColor: '#eee',
      },
      title: {
        text: 'Stuff per Entry'
      },
      xAxis: {
        opposite: true,
        alternateGridColor: '#f5f5f5',
        tickInterval: 1,
        categories: <%= @entries.count  %>,
        //gridLineColor: '#f4f4f4',
        // gridLineWidth: '4%',
        // later we'll use plotBand to highlight other columns
      },
      yAxis: [{
        tickInterval: .1,
        lineWidth: 1,
        maxPadding: 0.3,
        title: {
          text: null 
        },
      },{ // Values for opposite side of Y Axis
        opposite: true,
        title: {
          text: null 
        },
        tickInterval: .1,
        lineWidth: 1,
        linkedTo: 0,
      }], // end yAxis
      tooltip: {
        backgroundColor: '#f4f4f4',
        borderColor: '#ffffff',
        borderRadius: 10,
        borderWidth: 2,
        crosshairs: [{
          width: '4%',
          color: '#ccc',
          shared: true,
        }],
        formatter: function() {
          return Highcharts.numberFormat(this.y, 1) +  'Â°' + this.series.name;
        }
      },
      
      series: [
        {
          type: 'line',
          name: 'Temperatures',
          pointInverval: <%= 1.day * 1000 %>,
          lineWidth: 6,
          color: '#777777',
          data: <%= @entries.map(&:temperature).to_json %>,
          marker: {
            // may be possible to shift marker http://jsfiddle.net/8Sgzg/7/
            lineColor: Highcharts.getOptions().colors[7],
            fillColor: '#222222',
            radius: 8,
          },
      },{
          type: 'line',
          yAxis: 1,
          lineWidth: 1,
          name: 'Cover Line',
          color: '#FF0000',
          pointInverval: <%= 1.day * 1000 %>, 
          data: <%= @entries.map(&:cover_line).to_json %>,
          marker: {
            enabled: false
          }
        },{
          type: 'column',
          yAxis: 1,
          lineWidth: 1,
          name: 'Intercourse',
          color: '#FF0000',
          pointInverval: <%= 1.day * 1000 %>, 
          data: <%= @entries.map(&:intercourse_int).to_json %>,
          marker: {
            enabled: false,
                                symbol: 'url(http://www.highcharts.com/demo/gfx/sun.png)'

          }
        }          
      ]

    }); end // highcharts
}); // end function
</script>



