  <thead>
    <tr>
      <th>Recorded at</th>
      <th>Temperature</th>
      <th>Coverline</th>
      <th>Disturbed</th>
      <th>Intercourse</th>
      <th>Protected</th>
      <th>Cervix firmness</th>
      <th>Cervix height</th>
      <th>Cirvix openness</th>
      <th>Flow type</th>
      <th>Flow volume</th>
      <th>Ferning</th>
      <th>Opk</th>
      <th>Pregancy test</th>
      <th>Ovulatory pain</th>
      <th>Breast tenderness</th>
      <th>Breast fullness</th>
      <th>Alcohol</th>
      <th>Cramps</th>
